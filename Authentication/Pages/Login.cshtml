@page
@model Authentication.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<form method="post" enctype="application/x-www-form-urlencoded" autocomplete="off">

    <label for="username">Username</label>
    <input type="text" name="username" autofocus />
    <br />

    <label for="password">Password</label>
    <input type="password" name="password" />
    <br />

    @if (!string.IsNullOrEmpty(Request.Query["Error"])) {
        <div style="color: red">@Request.Query["Error"]</div>
    }

    <button type="submit">Login</button>

    <p>
        Utente "user" con password "test", ruolo "User".<br />
        Utente "admin" con password "admin", ruolo "Administrator".
    </p>

</form>
